<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/login_root"
    tools:context="com.zju.app.tutormall.LoginActivity"
    android:background="@drawable/login_page">

    <EditText
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:inputType="textPassword"
        android:hint="密码(不少于6位)"
        android:textColorHint="@color/silver"
        android:ems="10"
        android:id="@+id/user_password"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="@dimen/edit_text_padding_horizontal"
        android:paddingRight="@dimen/edit_text_padding_horizontal"
        android:paddingTop="@dimen/edit_text_padding_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/edit_text_size"

        android:layout_below="@+id/user_name"
        android:layout_alignStart="@+id/user_name"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:inputType="textPersonName"
        android:hint="用户名(中文/数字/字母)"
        android:textColorHint="@color/silver"
        android:textSize="@dimen/edit_text_size"
        android:ems="10"
        android:id="@+id/user_name"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="@dimen/edit_text_padding_horizontal"
        android:paddingRight="@dimen/edit_text_padding_horizontal"
        android:paddingTop="@dimen/edit_text_padding_vertical"
        android:textColor="@color/black"

        android:layout_marginTop="178dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:text="登录"
        android:id="@+id/login_btn"
        android:background="@color/cornflowerblue"
        android:layout_below="@+id/user_password"
        android:layout_alignStart="@+id/user_password"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击注册"
        android:clickable="true"
        android:textColor="@color/cornflowerblue"
        android:id="@+id/go_register"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
