<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_height="200dp"
        android:layout_width="@dimen/card_item_width"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/card_margin">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_item_text_large"
                android:text="Large TextLarge TextLarge TextLarge TextLarge TextLarge Text"
                android:maxLines="2"
                android:id="@+id/course_name"
                android:textColor="@color/black"
                android:maxWidth="250dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:maxLines="4"
                android:textSize="@dimen/list_item_text_small"
                android:maxWidth="200dp"
                android:text="Small TextSmall TextSmall TextSmall TextSmall Text"
                android:id="@+id/course_info"
                android:layout_below="@+id/course_name"
                android:layout_alignStart="@+id/course_name"
                android:layout_marginTop="11dp" />

            <View
                android:layout_width="250dp"
                android:layout_height="1px"
                android:background="@color/gray"
                android:id="@+id/view"
                android:layout_above="@+id/icon_paid"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/icon_paid"
                android:src="@drawable/clock"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/course_info"
                android:layout_marginBottom="23dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/go_check_order"
                android:id="@+id/go_check_order"
                android:clickable="true"
                android:layout_alignTop="@+id/icon_paid"
                android:layout_alignEnd="@+id/view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/list_item_text_small"
                android:text="已发布3天9小时61分"
                android:id="@+id/teacher_reg_time"
                android:layout_marginTop="3dp"
                android:layout_alignTop="@+id/icon_paid"
                android:layout_toEndOf="@+id/icon_paid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/list_item_text_small"
                android:text="查看详情"
                android:clickable="true"
                android:id="@+id/go_check_order_txt"
                android:layout_alignTop="@+id/teacher_reg_time"
                android:layout_toStartOf="@+id/go_check_order" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>