<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/card_item_width"
        android:layout_height="@dimen/card_item_height"
        android:layout_margin="@dimen/card_margin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:paddingRight="10dp"
            style="@style/Widget.CardContent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/card_item_avatar_size"
                android:layout_height="@dimen/card_item_avatar_size"
                android:id="@+id/avatar"
                android:layout_alignTop="@+id/vertical_divider" />
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/lightgray"
                android:layout_marginStart="40dp"
                android:id="@+id/vertical_divider"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/avatar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈名也"
                android:id="@+id/teacher_info"
                android:textSize="@dimen/list_item_text_medium"
                android:maxLines="1"
                android:textColor="@color/darkgray"
                android:layout_marginTop="7dp"
                android:layout_marginStart="18dp"
                android:layout_below="@+id/avatar"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course info"
                android:textSize="@dimen/list_item_text_large"
                android:id="@+id/course_info"
                android:textColor="@color/black"
                android:maxLines="2"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/vertical_divider"
                android:layout_toEndOf="@+id/vertical_divider" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule info"
                android:textSize="@dimen/list_item_text_small"
                android:textColor="@color/lightgray"
                android:maxLines="3"
                android:id="@+id/schedule_info"
                android:layout_below="@+id/avatar"
                android:layout_alignStart="@+id/course_info" />

            <ImageView
                android:layout_width="@dimen/card_item_avatar_size"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/stars"
                android:layout_alignBottom="@+id/vertical_divider"
                android:layout_toStartOf="@+id/vertical_divider" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

